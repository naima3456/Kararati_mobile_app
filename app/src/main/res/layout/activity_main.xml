<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blueblue"

  >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/splashscreenlogo"/>

    <Button
        app:backgroundTint="@null"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:background="@color/btn_3"
        android:id="@+id/go_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="25dp"
        android:minHeight="48dp"
        android:text="تصفح القرارات"
        android:textSize="19sp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/gotosettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_list"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/buttonname"
        android:textColor="@color/white"
        android:textSize="19sp" />


</RelativeLayout>